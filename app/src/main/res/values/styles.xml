<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryWhite</item>
        <item name="colorPrimaryDark">@color/colorPrimaryBlue</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="title_white">
        <item name="android:textColor">@color/colorPrimaryWhite</item>
        <item name="android:textAlignment"> center </item>
        <item name="android:shadowColor"> @color/colorShadow </item>
        <item name="android:shadowDx"> 2 </item>
        <item name="android:shadowDy"> 4 </item>
        <item name="android:shadowRadius"> 20 </item>
        <item name="android:textStyle"> bold </item>
    </style>

    <style name="header1_black">
        <item name="android:textSize"> 20sp </item>
        <item name="android:textColor"> #000000 </item>
        <item name="android:textStyle"> bold </item>
    </style>

    <style name="header2_black">
        <item name="android:textSize"> 30sp </item>
        <item name="android:textColor"> #000000 </item>
        <item name="android:textStyle"> bold </item>
    </style>

    <style name="text1_white">
        <item name="android:textSize"> 20sp </item>
        <item name="android:textColor"> #FFFFFF </item>
        <item name="android:textStyle"> bold </item>
    </style>

</resources>
